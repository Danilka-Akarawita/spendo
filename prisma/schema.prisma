generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Budget {
  id        Int      @id @default(autoincrement()) // Unique identifier
  name      String // Name of the budget (e.g., "Marketing Budget", "Annual Budget")
  amount    Float // The budget amount (e.g., 1000, 2500)
  createdBy String // The user or entity who created the budget
  createdAt DateTime @default(now()) // Date when the budget was created
}
